public class if{

     public static void main(String []args){
         
         int a = 2;
         int b = 8;
         int c = 1;
        
         if (a == b) {
        	System.out.println(a + b);
         }
         else if(b == c) {
            
            System.out.println(b + c);
        		
        	}else if (a == c) {
        	    System.out.println(a + c);
        		
        	}
        	else {
        	    System.out.println(0);
        	}
        	
     }
}
