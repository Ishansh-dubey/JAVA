package stringDemo;

class Triangle {
    
    int side ;
    int side2 ;
    int height ;
    int base ;
    
    float area;
    float perimeter;
    
    void area() {
        
       area= (base*height)/2;
       
        
    }
    
    void perimeter(){
        perimeter= side+side2+base;
    }
    
}    

public class Practice2{

	
	public static void main(String[] args) {
		Triangle tg1 = new Triangle();
		
		tg1.base=3;
		tg1.height=4;
		
		tg1.area();
		System.out.println(tg1.area);
		
	    Triangle tg2 = new Triangle();
	    
	    tg2.side=3;
	    tg2.side2=4;
	    tg2.base=6;
	    
     	tg2.perimeter();
		System.out.println(tg2.perimeter);
	}
	
	
    
}  
