package SampleProject;


public class SampleClass {
	
	public static int sod( int index,String sc,int sum,int i, int count) {
		
	
	
		if(count > index) {
		
		System.out.println("Total " +sum);
	}
	else {
		int total =Character.getNumericValue(sc.charAt(i));
		 sum= sum+total;
	
		i++;
		count++;
		
		
		return sod(index,sc,sum,i, count);
		
	 
	}
	
	return count;
				
	}

  public static void main(String args[]) {
 
     
      int num=123;
      System.out.println("num: "+ num);
      String sc =String.valueOf(num);
      int length=sc.length();
      int index= length-1;
    
      int sum =0;
      int i=0;
      int count =0;
      
     sod(index,sc,sum, i ,count);
 
      
      }
  }





package SampleProject;


public class SampleClass {
	
	public static void sod(int num, int len,int sum, int count) {
		
	
	
		if(count > len) {
		
		System.out.println("Total " +sum);
	}
	else {
		int d =num%10;
		 sum= sum+d;
		 
		 num=num/10;
	
		
		count++;
		
		
	    sod(num,len,sum, count);
		
	 
	 }
				
		
	}

  public static void main(String args[]) {
 
     
      int num=124030;
      System.out.println("num: "+ num);
      String sc =String.valueOf(num);
      int length=sc.length();
      int len= length-1;
    
      int sum =0;
    
      int count =0;
      
     sod(num,len,sum ,count);
 
      
      }
  }









package SampleProject;


public class SampleClass {
	
	public static void sod(int num,int sum) {
		
	
	
		if(num==0) {
		
		System.out.println("Total " +sum);
	}
	else {
		int d =num%10;
		 sum= sum+d;
		 
		 num=num/10;
	
	    sod(num,sum);
		 
	  }
		
	}

  public static void main(String args[]) {
 
     
      int num=123456789;
      System.out.println("num: "+ num);
      int sum =0;
    
     sod(num,sum );
 
      
      }
  }








