package SampleProject;

public class SampleClass{
	
	public static void main(String[] args) {
		
		String sc = "hi my name is ishansh";
		
		int length = sc.length();
		
		int a = length / 2;
		
		System.out.println(sc.substring(0,a));
		System.out.println(sc.substring(a));
		
	}
	
}









ppackage SampleProject;
import java.util.Scanner;
public class SampleClass{
	
	public static void main(String[] args) {
		
     Scanner sc = new Scanner(System.in);
		
		System.out.println("Enter your no.: ");
		int a = sc.nextInt();
		
		
		String sc1 = "ishans";
		
		int length = sc1.length();
		int b = length / a ;
		int i = 0;
		int j = 0;
		
		int count = 0;
		for(; i<=i; i++ ) {
			for(j=i+b; j<=j; j++ ) {
				
				System.out.println(sc1.substring(i,j));
				
				
				count++;
			}
			if(count == a) {
			break;
			}
			else {
				i=j;
				j=0;
			}
		}
		
	}
	
}
